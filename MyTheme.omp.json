{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \uf0e7 ",
          "background": "#007ACC",
          "foreground": "#100e23"
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }}@{{ .HostName }} ",
          "background": "#444444",
          "foreground": "#ffffff"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": "/",
            "home_icon": "~",
            "style": "full"
          },
          "background": "#91ddff",
          "foreground": "#100e23"
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9D5C{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#cc0000{{ end }}",
            "{{ if gt .Ahead 0 }}#FFB30F{{ end }}",
            "{{ if gt .Behind 0 }}#ffea00{{ end }}"
          ],
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "properties": {
            "branch_icon": "\ue725",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "git_icon": "\ue702"
          },
          "background": "#37833a",
          "foreground": "#100e23"
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "background": "#FFD43B",
          "foreground": "#100e23"
        },
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \ue20f {{ if gt .Code 0 }}\uf00d {{ .Meaning }}{{ else }}\uf42e{{ end }} ",
          "background": "#B82200",
          "foreground": "#ffffff"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "template": " <#fefefe>\udb86\udd9f</> {{ .FormattedMs }} ",
          "properties": {
            "style": "austin",
            "threshold": 500
          },
          "background": "#007ACC",
          "foreground": "#ffffff"
        },
        {
          "type": "os",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "background": "#444444",
          "foreground": "#ffffff",
          "properties": {
            "windows": "\udb81\uddb3"
          }
        },
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "background_templates": [
            "{{ if eq \"Full\" .State.String }}#37833a{{ end }}",
            "{{ if eq \"Charging\" .State.String }}#FF893B{{ end }}",
            "{{ if eq \"Discharging\" .State.String }}#ff5722{{ end }}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}\uf295 ",
          "properties": {
            "charged_icon": "\udb81\udea5",
            "charging_icon": "\udb80\udc84",
            "discharging_icon": "\udb80\udc79"
          },
          "background": "#f36943",
          "foreground": "#ffffff"
        },
        {
          "type": "time",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04:05"
          },
          "background": "#007ACC",
          "foreground": "#ffffff"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "‚ùØ ",
          "foreground": "#007ACC"
        }
      ],
      "newline": true
    }
  ]
}
